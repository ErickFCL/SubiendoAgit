@{
    var accounts = ((List<Account>)Model);
}

<h1>Cuentas de (@User.Claims.FirstOrDefault().Value)</h1>

<a href="/account/create">Crear Cuenta</a>

<table class="table">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Tipo</th>
            <th>Nombre</th>
            <th>Divisa</th>
            <th>Saldo</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in accounts)
        {
            
            <tr>
                <td>
                    <img src="@item.ImagePath" width="100" alt="Alternate text"/>
                </td>
                <td>@item.Type.Name</td>
                <td>@item.Name</td>
                <td>@item.Currency</td>
                <td>@item.Amount S/.</td>
                <td>
                    <a href="/Account/edit?id=@item.Id">Editar</a> |
                    <a href="/Account/delete?id=@item.Id">Eliminar</a> |
                    <a href="/Transaction/Index?accountId=@item.Id">Transacciones</a>
                </td>
            </tr>
        }


    </tbody>
</table>