
<h1>Realizando Transacción. . .</h1>

<form action="/transaction/create" method="post">
    <input type="hidden" name="AccountId" value="@ViewBag.AccountId" />
    <input type="text" name="Summary" placeholder="Motivo" />
    <input type="datetime-local" name="Date" placeholder="Fecha" />
    <select name="Type">
        <option value="GASTO">Gasto</option>
        <option value="INGRESO">Ingreso</option>
    </select>
    <input type="text" name="Amount" placeholder="Monto" />

    <button>Guardar</button>

</form>
